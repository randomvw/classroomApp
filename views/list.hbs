<h1>Student List</h1>
<br>
<a class="btn btn-primary" href='/add'>Add a Student</a>
<a class="btn btn-danger btn-space float-right" href='/logout'>Log out</a>

<table class="table table-sm">
  <thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th></th>
  </tr>
  <ul>
  {{#each students}}
    <tr>
      <td>{{this.firstName}} {{this.lastName}}</td>
      <td>{{this.phone}}</td>
      <td class="text-right"><a class="btn btn-info btn-sm"  href="/edit/{{ this.id }}">Edit</a> <a class="btn btn-warning btn-sm" href="/delete/{{ this.id }}">Delete</a></td>
    </tr>
  {{/each}}
</ul>
</table>
